#tag WindowCode
	#tag Method, Flags = &h0
		Sub Load(toTarget as ARProject.CustomizationConstant)
		  mbLoading = true
		  moConstant = toTarget
		  
		  // Load
		  LoadMenus
		  
		  // Scope
		  pmScope.ListIndex = -1
		  if moConstant.eScope <> ARProject.ItemScope.Unknown then
		    pmScope.SetFromTagValue(moConstant.eScope)
		    
		  end
		  
		  // Data type
		  pmType.ListIndex = -1
		  if moConstant.eDataType <> ARProject.CustomizationConstant.ConstantType.Unknown then
		    pmType.SetFromTagValue(moConstant.eDataType)
		    
		  end
		  
		  // Simple
		  chkLocalized.Value = moConstant.bLocalized
		  txtName.Text = moConstant.sName
		  
		  mbLoading = false
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub LoadMenus()
		  if pmScope.ListCount < 1 then
		    pmScope.AddRowAndTag("Public", ARProject.ItemScope.ScopePublic)
		    pmScope.AddRowAndTag("Protected", ARProject.ItemScope.ScopeProtected)
		    pmScope.AddRowAndTag("Private", ARProject.ItemScope.ScopePrivate)
		    
		  end
		  
		  if pmType.ListCount < 1 then
		    pmType.AddRowAndTag("Boolean", ARProject.CustomizationConstant.ConstantType.TypeBoolean)
		    pmType.AddRowAndTag("Color", ARProject.CustomizationConstant.ConstantType.TypeColor)
		    pmType.AddRowAndTag("Number", ARProject.CustomizationConstant.ConstantType.TypeNumber)
		    pmType.AddRowAndTag("String", ARProject.CustomizationConstant.ConstantType.TypeString)
		    
		  end
		End Sub
	#tag EndMethod


