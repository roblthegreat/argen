#tag Events txtName
	#tag Event
		Sub TextChange()
		  if mbLoading = true then return
		  
		  moConstant.sName = me.Text
		  self.TrueWindow.ContentsChanged = true
		  
		  RaiseEvent NameChanged
		End Sub
	#tag EndEvent
#tag EndEvents
